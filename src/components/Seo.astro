---
import { siteData } from "@data/siteData";
const { pageData, pageTitle, socialImage, hrefLang, lang, url = Astro.url  } = Astro.props.frontmatter || Astro.props;
---

<title>{siteData.name} {pageTitle && ' - ' + pageTitle || pageData?.title && ' - ' + pageData?.title}</title>
<meta name="description" content={pageData?.description || siteData.description}/>
<!-- <link rel="sitemap" href="/sitemap-index.xml" /> uncomment this after checking build creates sitemap -->
<link rel="canonical" href={url} />



{hrefLang.map( (l: { data: { translation: { id: string | null | undefined; }; }; slug: any; }) => 
    <link rel="alternate" hreflang={l.data.translation.id} href={`${Astro.url.origin}/${l.slug}`} />
)}

<!-- Open Graph -->
<meta property="og:site_name" content=`${siteData.name}` />
<meta property="og:title" content={pageData?.title || pageTitle} />
<meta property="og:description" content={pageData?.description || siteData.description} />
<meta property="og:type" content="website" />
<meta property="og:url" content={url} />
<meta property="og:image" content={socialImage?.src || siteData.image.src} />
<meta property="og:image:url" content={socialImage?.src || siteData.image.src} />
<meta property="og:image:secure_url" content={socialImage?.src || siteData.image.src} />
<meta property="og:image:type" content="image/jpeg" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="600" />
<meta property="og:image:alt" content={pageData?.alt || siteData.image.alt} />
		
<!-- Twitter -->
<meta name="twitter:title" content={pageData?.title || pageTitle} />
<meta name="twitter:description" content={pageData?.description || siteData.description} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={socialImage?.src || siteData.image.src} />
<meta name="twitter:image:alt" content={pageData?.alt || !socialImage?.src && siteData.image.alt} />
<meta name="twitter:domain" content={Astro.url.origin} />